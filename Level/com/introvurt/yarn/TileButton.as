package com.introvurt.yarn {		import flash.display.Sprite;	import flash.events.Event;	import flash.events.MouseEvent;		public class TileButton extends Sprite {				public var tile:Tile;		private var _num:int;				public function TileButton() {			// constructor code		}				public function init( num:int ):void		{			tile.mouseEnabled = false;			tile.mouseChildren = false;			tile.spriteValue = num;			_num = num;						addEventListener( MouseEvent.CLICK, onClick, false, 0, true );		}				private function onClick( e:Event ):void		{			Main(parent).tileValue = _num;		}				// GET & SET		public function getNum():int {			return _num;		}	}}